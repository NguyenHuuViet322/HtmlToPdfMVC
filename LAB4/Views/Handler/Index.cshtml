@model HistoryItem

<div class="col-md-12">
	<div class="card">
		<div class="card-header bg bg-primary text text-white font-weight-bold">Nhập URL của trang web bạn muốn chuyển đổi</div>
		<div class="card-body p-3">
			<form method="post">
				<div class="form-group">
					<label asp-for="Url"></label>
					<input class="form-control" type="text" asp-for="Url"/>
				</div>
				@{
						if (ViewBag.Status == "Error")
						{
							<div class="alert alert-danger mt-2">@ViewBag.Status</div>
						}
						if (ViewBag.Status != "Success"){
							<button class="btn btn-primary mt-3" type="submit" asp-controller="Handler" asp-action="ProcessingPdf">Chuyển đổi</button>
						}
				}
			</form>
			@if (ViewBag.Status == "Success")
			{
				<div class="alert alert-success mt-2 col-md-6 p-2">
					@ViewBag.Status
				</div>
				<div class="alert alert-success p-2 col-md-6">
					Bấm vào nút dưới để Download file về máy
				</div>
				<form method="post" asp-controller="Handler" asp-action="DownloadFile">
					<input type="text" value="@ViewBag.FileName" style="display:none;" name="fileName">
					<button class="btn btn-primary" type="submit">Download</button>
				</form>
			}
		</div>
	</div>
</div>