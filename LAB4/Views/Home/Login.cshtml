@model User

<div class="row justify-content-md-center">
    <div class="col-md-5">
        <section class="card">
            <form asp-controller="Home" asp-action="Login" method="post">
                <h4 class="card-header">Sử dụng tài khoản đã đăng ký để đăng nhập</h4>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-4 md-4">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                    </div>
                    <div>
                        <p>
                        <a class="text mt-3" asp-controller="Home" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký</a>
                        </p>
                    </div>
                    @{
                        if (ViewBag.Error != null)
                        {
                            <div class="card-footer">
                                <div class="alert alert-danger">
                                    <p>@ViewBag.Error</p>
                                </div>
                            </div>
                        }
                        if (ViewBag.RegisterSuccess != null)
                        {
                            <div class="card-footer">
                                <div class="alert alert-success">
                                    <p>@ViewBag.RegisterSuccess</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </form>
        </section>
    </div>
</div>